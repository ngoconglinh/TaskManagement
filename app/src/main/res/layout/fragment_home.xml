<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment"
    android:scrollbars="none"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="150dp"
        android:clipToPadding="false"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_dark"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/hi"/>
                <TextView
                    android:id="@+id/text_view_user_name_home_fragment"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_dark"
                    android:textSize="28sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/devsnet"/>
            </LinearLayout>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/menu"
                android:background="@drawable/border"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginEnd="14dp">
                <androidx.appcompat.widget.SearchView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:iconifiedByDefault="false"
                    android:focusedByDefault="false"
                    app:queryBackground="@android:color/transparent"
                    app:queryHint="Search"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/background_color">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/fillter"
                    android:layout_gravity="center"
                    android:contentDescription="@string/todo"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:includeFontPadding="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/today"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:background="@drawable/date_icon"
                android:backgroundTint="@color/text_color_dark_40"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tv_home_fragment_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:text="@string/june_20_2022"
                android:textColor="@color/text_color_dark_40"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/background_color">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="22dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ongoing_icon"
                            android:contentDescription="@string/todo"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:includeFontPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/ongoing"/>
                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">
                            <TextView
                                android:id="@+id/tv_ongoing"
                                android:includeFontPadding="false"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_weight="1"
                                android:text="@string/_10_tasks"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/arrow_right"
                                android:backgroundTint="@color/white"
                                android:contentDescription="@string/todo"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="@color/second_blue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pending_icon"
                            android:contentDescription="@string/todo"
                            tools:ignore="RtlHardcoded" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:includeFontPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/background_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/completed"/>
                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">
                            <TextView
                                android:id="@+id/tv_completed"
                                android:includeFontPadding="false"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/background_color"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_weight="1"
                                android:text="@string/_10_tasks"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/arrow_right"
                                android:backgroundTint="@color/background_color"
                                android:contentDescription="@string/todo"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="14dp"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/second_yellow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pending_icon_2"
                            android:contentDescription="@string/todo"
                            tools:ignore="RtlHardcoded" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:includeFontPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/background_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/pending"/>
                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">
                            <TextView
                                android:id="@+id/tv_pending"
                                android:includeFontPadding="false"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/background_color"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_weight="1"
                                android:text="@string/_10_tasks"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/arrow_right"
                                android:backgroundTint="@color/background_color"
                                android:contentDescription="@string/todo"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="@color/second_black">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="22dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cancel_icon"
                            android:contentDescription="@string/todo"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:includeFontPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/background_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/cancel"/>
                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">
                            <TextView
                                android:id="@+id/tv_cancel"
                                android:includeFontPadding="false"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/background_color"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_weight="1"
                                android:text="@string/_10_tasks"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/arrow_right"
                                android:backgroundTint="@color/background_color"
                                android:contentDescription="@string/todo"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_fragment_show_all_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            tools:ignore="UseCompoundDrawables">
            <TextView
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark_90"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/all_tasks"/>
            <ImageView
                android:id="@+id/home_fragment_icon_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dropdown"
                android:backgroundTint="@color/background_color"
                android:contentDescription="@string/todo"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</ScrollView>