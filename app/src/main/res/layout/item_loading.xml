<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <ProgressBar
        android:id="@+id/progress_bar_item_loading"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/progressBarStyle" />
    <LinearLayout
        android:visibility="gone"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:background="@drawable/border_chat_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_timeline_messenges"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Time Line"
            tools:ignore="HardcodedText,VisualLintLongText" />
        <ImageView
            android:id="@+id/imageView_messages_activity"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:maxHeight="300dp"
            android:maxWidth="150dp"
            android:visibility="gone"
            android:src="@drawable/user1"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/text_view_text_messenges"
            android:includeFontPadding="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:text="Hi"
            tools:ignore="HardcodedText,VisualLintLongText" />
        <TextView
            android:id="@+id/text_view_time_messenges"
            android:layout_marginStart="7dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_50"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/_0h_ago"
            android:layout_gravity="bottom"
            tools:ignore="SmallSp" />
    </LinearLayout>
</FrameLayout>